<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <View
        android:id="@+id/color_cat_stat"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inex_cat_stat"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/color_cat_stat"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Transport" />

    <TextView
        android:id="@+id/percentage_cat_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/inex_cat_stat"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="99.99%" />

</androidx.constraintlayout.widget.ConstraintLayout>